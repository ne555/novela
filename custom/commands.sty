\newcommand{\separate}{%
	\[\star \star \star\]\par
}

\newcommand{\epigraph}[2]{%
	\begin{flushright}
		\parbox[c]{.7\textwidth}{%
			#1
			\smallskip
			\hrule
		}
	\end{flushright}
}

\newcommand{\Epigrafe}[2]{%
	%\begin{flushright}
	%	\parbox[c]{.7\textwidth}{%
	%		#1\par
	%		%\smallskip
	%		\hrule

	%		\smallskip
	%		\emph{#2}\par
	%	}

	%\end{flushright}
	\begin{flushright}
	\begin{minipage}{.7\linewidth}
		#1\par
		\smallskip\hrule\smallskip
		\firma{#2}\par
	\end{minipage}
	\end{flushright}
}

\newcommand{\Fin}{%
	\begin{center}
		\large \sc Fin
	\end{center}
}

\newcommand{\firma}[1]{%
	\par{\raggedleft \emph{#1}\par}
}

\newcommand{\Image}[1]{%
	\begin{center}
		\includegraphics[max width=.9\textwidth, max height=.9\textheight, keepaspectratio]{#1}
	\end{center}
}

\newcommand{\InsertImage}[1]{%
	\includegraphics[max width=.9\textwidth, max height=.9\textheight, keepaspectratio]{#1}
}

\newcommand{\vcentrar}[1]{%
	\null \vfill
	#1
	\null \vfill
	\clearpage
}

\newcommand{\agradecimientos}[1]{%
	\thispagestyle{empty}
	\vcentrar{%
	\begin{flushright}
		\begin{minipage}{.6\linewidth}
			#1
		\end{minipage}
	\end{flushright}
	}
}

\newcommand{\Sinopsis}[1]{%
	\clearpage
	\thispagestyle{empty}
	\null\vfill
	#1
	\clearpage
}

\newcommand{\translation}[1]{%
\footnote{#1 (N. del E.)}%
}

\newcommand{\translationmark}{%
\footnotemark{}%
}

\newcommand{\translationtext}[1]{%
	\footnotetext{#1 (N. del E.)}%
}

\newcommand{\Ord}[1]{%
	\textsuperscript{#1}%
}
\newcommand{\Romano}[1]{%
	\MakeUppercase{\romannumeral #1}%
}
\newcommand{\romano}[1]{%
	\romannumeral #1%
}

\newcommand{\grado}{$^\circ$}

