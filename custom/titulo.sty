\ProvidesPackage{titulo}
\RequirePackage{titlesec}

\DeclareOption{chapter}{%
	\titleformat{\chapter}[display]
		{\sffamily\Large}
		{\chaptertitlename\space\thechapter}
		{0pt}
		{\sffamily\bfseries\huge}
	\titlespacing*{\chapter}{0pt}{0pt}{0pt}
}

\DeclareOption{titleonly}{%
	\titleformat{\chapter}
		{}
		{}
		{0pt}
		{\centering \sffamily\bfseries\huge}
	\renewcommand{\thesection}{%
	\if@mainmatter
		\arabic{section}%
	\else
		\roman{section}%
	\fi
	}
	\renewcommand{\thesubsection}{%
	\if@mainmatter
		\Roman{subsection}%
	\else
		\roman{section}.\Roman{subsection}%
	\fi
	}
}

\renewcommand{\thesection}{%
\if@mainmatter
	\thechapter.\arabic{section}%
\else
	\roman{section}%
\fi
}

\titleformat{\section}
	{\sffamily\bfseries\Large}
	{\thesection}
	{1ex}
	{\sffamily\bfseries\Large}

\titleformat{\part}[display]
	{\centering \sffamily\bfseries\huge}
	{Parte\space\Roman{part}}
	{0pt}
	{\centering \sffamily\bfseries\Huge}

\ExecuteOptions{chapter}
\ProcessOptions\relax

\endinput
