\newcommand*{\titleWB}{%
	\drop = 0.05\textheight
	\null\vfill%
	\begin{center}
		\Huge\sffamily\bfseries\@title
	\end{center}
	\ifcsname thesubtitle\endcsname
		\begin{center}%
			\large\itshape\sffamily\thesubtitle
		\end{center}%
	\fi
	%\vskip 0.5em
	\vspace*{\drop}
	\begin{center}%
		\large\sffamily\textsc%
		\@author\par
		\ifcsname theAnotherAuthor\endcsname
			\small\sffamily\textsc{\theAnotherAuthor}
		\fi
	\end{center}%

	\begin{center}
		\@date
	\end{center}
	\vfill
	\begin{center}
		\Publisher
	\end{center}
