}
\newcommand*{\titleBC}{\begingroup
	\def\Title{\sffamily\textit{\Huge \@title}}
	\settowidth{\unitlength}{\Title}
	\begin{center}
		\topb\\[\baselineskip]
		\Title\\[.5\baselineskip]
		\ifcsname thesubtitle\endcsname
		{\sffamily\LARGE\thesubtitle}\\
		\fi
		\botb
	\end{center}
	\ifcsname portada\endcsname
	\portada
	\fi
	\vfill
	\begin{center}
		{\LARGE\textbf{\@author}}\\[\baselineskip]
		\ifcsname theAnotherAuthor\endcsname
		{\large\theAnotherAuthor}
		\fi

		\@date
		\vfill
		\Publisher
		%\plogo\\[0.5\baselineskip]
	\end{center}
\endgroup}

