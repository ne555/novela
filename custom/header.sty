\ProvidesPackage{header}
\RequirePackage{fancyhdr}

\DeclareOption{numtitle}{%
	\pagestyle{fancy}
	\renewcommand{\chaptermark}[1]{%
		\if@mainmatter
			\markboth{\thechapter. #1}{}%
		\else
			\markboth{#1}{}%
		\fi
	}
	\lhead{\leftmark}
	\chead{}
	\rhead{}
}

\DeclareOption{title}{%
	\pagestyle{fancy}
	\renewcommand{\chaptermark}[1]{\markboth{#1}{}}
	\lhead{}
	\chead{\leftmark}
	\rhead{}
}

\DeclareOption{empty}{
	\renewcommand{\chaptermark}[1]{%
		\if@mainmatter
			\markboth{\@chapapp\ \thechapter}{}%
		\else
			\markboth{#1}{}%
		\fi
	}
	\lhead{\leftmark}
	\chead{}
	\rhead{}
}


\DeclareOption{printable}{%
	\lfoot{}
	\rfoot{}
	\cfoot{\thepage}
}

\ExecuteOptions{empty}
\ProcessOptions\relax

\endinput
