\ProvidesPackage{header}
\RequirePackage{fancyhdr}
\pagestyle{fancy}

\DeclareOption{numtitle}{
	\renewcommand{\chaptermark}[1]{%
		\if@mainmatter
			\markboth{\thechapter. #1}{}%
		\else
			\markboth{#1}{}%
		\fi
	}
	\lhead{\leftmark}
	\chead{}
	\rhead{}
}

\DeclareOption{title}{
	\renewcommand{\chaptermark}[1]{\markboth{#1}{}}
	\lhead{}
	\chead{\leftmark}
	\rhead{}
}

\DeclareOption{empty}{
	\renewcommand{\chaptermark}[1]{%
		\if@mainmatter
			\markboth{\@chapapp\ \thechapter}{}%
		\else
			\markboth{#1}{}%
		\fi
	}
	\lhead{\leftmark}
	\chead{}
	\rhead{}
}


\ExecuteOptions{empty}

\ProcessOptions\relax

\lfoot{}
\rfoot{}
\cfoot{}

